!!!5
%html(lang="en")
  %head
    = partial 'header-meta'
    = stylesheet_link_tag 'site.css'
    %title= data['site']['title']
    <link rel="stylesheet" href="https://use.typekit.net/yga5not.css">
  %body
    .page-header
      %h1.page-title
        - title = data['site']['title'].gsub(/Mc/, 'M<sup>c</sup>').gsub(' ', '<br/>')
        = link_to(title, '/')
    .page
      .main(role="main")
        = yield
    = partial 'page_footer'
    = partial 'ga'
